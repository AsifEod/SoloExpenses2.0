<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:padding="3dp"
            app:srcCompat="@drawable/create_expense_vector" />

        <TextView
            android:id="@+id/tv_action_count"
            style="@style/TextViewExtraSmallActionalCountStyle"
            android:layout_width="@dimen/actional_count_size"
            android:layout_height="@dimen/actional_count_size"
            android:layout_gravity="right|top"
            android:background="@drawable/actional_count_circle"
            android:gravity="center"
            tools:text="1" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_menu_label"
        style="@style/TextViewNormalOffBlackStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame_layout"
        android:layout_centerHorizontal="true"
        tools:text="Expense" />
</RelativeLayout>