<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

    <ImageView
        style="@style/ThemeIconColor"
        android:id="@+id/iv_category_icon"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/expenses_icon_vector"/>

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_toEndOf="@+id/iv_category_icon"
        android:layout_toStartOf="@+id/iv_fav_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_centerVertical="true"
        style="@style/TextViewNormalOffBlackStyle"
        tools:text="sasdasdasdas"/>

    <ImageView
        android:id="@+id/iv_fav_icon"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/expenses_icon_vector"/>
    </RelativeLayout>

    <View
        android:layout_below="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_category_border_height"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:background="@color/darker_gray" />
</RelativeLayout>